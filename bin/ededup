#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "jscpd --reporters html --output dedup-report && start ./dedup-report/jscpd-report.html" "$@"
  ret=$?
else
  node  "jscpd --reporters html --output dedup-report && start ./dedup-report/jscpd-report.html" "$@"
  ret=$?
fi
exit $ret
